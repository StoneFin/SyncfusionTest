@model IEnumerable<SyncfusionProof.Models.TestModel>
@using Syncfusion.JavaScript.Models

@(Html.EJ().Grid<IEnumerable<SyncfusionProof.Models.TestModel>>("Grid")
  .Datasource(Model)
  .AllowSorting()
  .AllowPaging()
  .AllowResizing()
  .AllowScrolling()
  .ScrollSettings(scroll => { scroll.Width("100%"); })
  .MinWidth(500)
  .IsResponsive()
  .ToolbarSettings(tbb =>
  {
    tbb.ShowToolbar().ToolbarItems(tbib => { tbib.AddTool(ToolBarItems.Search); });
  })
  .Columns(colb =>
  {
    colb.HeaderText("Manage").Commands(comb =>
    {
      comb.Type("Edit").ButtonOptions(new ButtonProperties() { Text = "Edit", Click = "GetEdit", Width = "90" }).Add();
      comb.Type("Remove").ButtonOptions(new ButtonProperties() { Text = "Remove", Click = "GetRemove", Width = "90" }).Add();
    }).IsUnbound(true).Width(225).Add();

    colb.Field("OrderId").HeaderText("Order ID").IsPrimaryKey(true).TextAlign(TextAlign.Right).Add();
    colb.Field("CustomerId").HeaderText("Customer ID").Add();
    colb.Field("EmployeeId").HeaderText("Employee ID").TextAlign(TextAlign.Right).Add();
    colb.Field("Freight").HeaderText("Freight").TextAlign(TextAlign.Right).Format("{0:C}").Add();
    colb.Field("FreightDetails.Freight2").HeaderText("Freight2").TextAlign(TextAlign.Right).Format("{0:C}").Add();
    colb.Field("OrderDate").HeaderText("Order Date").TextAlign(TextAlign.Right).Format("{0:MM/dd/yyyy}").Add();
    colb.Field("ShipCity").HeaderText("Ship City").Add();
    colb.Field("ShipState").HeaderText("Ship State").Add();
    colb.Field("FavoriteBunny").HeaderText("Favorite Bunny").Add();
    colb.Field("ShipCountry").HeaderText("ShipCountry").Add();
    colb.Field("ShipPostalCode").HeaderText("Ship Postal Code").Add();
    colb.Field("Verified").HeaderText("Verified").Add();
  }))
