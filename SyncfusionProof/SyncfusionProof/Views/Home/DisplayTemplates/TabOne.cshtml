@model SyncfusionProof.Models.HomeModel

@using Syncfusion.JavaScript.Models

@(Html.EJ().Grid<SyncfusionProof.Models.TestModel>("Grid")
  .Datasource(Model.TestModels)
  .AllowSorting()
  .AllowPaging()
  .AllowResizing()
  //if the grid is contained in tabs where EnablePersistence = true, do not add these settings
  //if the grid is contained in tabs where EnablePersistence = false, only add these to grids contained in all but the first tab
  //.AllowScrolling()
  //.ScrollSettings(x => { x.Width("100%"); })
  .MinWidth(500)
  .IsResponsive()
  .Columns(x =>
  {
    x.Field("OrderId").HeaderText("Order ID").IsPrimaryKey(true).TextAlign(TextAlign.Right).Add();
    x.Field("CustomerId").HeaderText("Customer ID").Add();
    x.Field("EmployeeId").HeaderText("Employee ID").TextAlign(TextAlign.Right).Add();
    x.Field("Freight").HeaderText("Freight").TextAlign(TextAlign.Right).Format("{0:C}").Add();
    x.Field("FreightDetails.Freight2").HeaderText("Freight2").TextAlign(TextAlign.Right).Format("{0:C}").Add();
    x.Field("OrderDate").HeaderText("Order Date").TextAlign(TextAlign.Right).Format("{0:MM/dd/yyyy}").Add();
    x.Field("ShipCity").HeaderText("Ship City").Add();
    x.Field("ShipState").HeaderText("Ship State").Add();
    x.Field("ShipCountry").HeaderText("ShipCountry").Add();
    x.Field("ShipPostalCode").HeaderText("Ship Postal Code").Add();
    x.Field("Verified").HeaderText("Verified").Add();
  })
)
