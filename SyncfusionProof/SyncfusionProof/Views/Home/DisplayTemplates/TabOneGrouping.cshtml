@model SyncfusionProof.Models.HomeModel

@using Syncfusion.JavaScript.Models

@(Html.EJ().Grid<SyncfusionProof.Models.TestModel>("TabOneGroupingGrid")
  .Datasource(Model.TestModels)
  .AllowSorting()
  .AllowPaging()
  .AllowResizing()
  .AllowScrolling()
  .ScrollSettings(x => { x.Width("100%"); })
  .MinWidth(500)
  .IsResponsive()
  .AllowGrouping()
  .GroupSettings(group => { group.GroupedColumns(col => { col.Add("ShipState"); }).EnableDropAreaAnimation(false); })
  .ShowSummary()
  .SummaryRow(x =>
  {
    x.Title("Total").SummaryColumns(y =>
    {
      y.SummaryType(SummaryType.Sum).Format("{0:C2}").DisplayColumn("Freight").DataMember("Freight").Add();
      y.SummaryType(SummaryType.Sum).Format("{0:C2}").DisplayColumn("FreightDetails.Freight2").DataMember("FreightDetails.Freight2").Add();
      }).Add();
    x.Title("Average").SummaryColumns(y =>
    {
      y.SummaryType(SummaryType.Average).Format("{0:C2}").DisplayColumn("Freight").DataMember("Freight").Add();
      y.SummaryType(SummaryType.Average).Format("{0:C2}").DisplayColumn("FreightDetails.Freight2").DataMember("FreightDetails.Freight2").Add();
     }).Add();
  })
    .ToolbarSettings(x =>
  {
    x.ShowToolbar()
    .ToolbarItems(y =>
    {
      y.AddTool(ToolBarItems.Search);
    })
   ;
  })
  .Columns(x =>
  {
    x.Field("OrderId").HeaderText("Order ID").IsPrimaryKey(true).Add();
    x.Field("CustomerId").HeaderText("Customer ID").Add();
    x.Field("EmployeeId").HeaderText("Employee ID").Add();
    x.Field("Freight").HeaderText("Freight").Format("{0:C}").Add();
    x.Field("FreightDetails.Freight2").HeaderText("Freight2").Format("{0:C}").Add();
    x.Field("OrderDate").HeaderText("Order Date").Format("{0:MM/dd/yyyy}").Add();
    x.Field("ShipCity").HeaderText("Ship City").Add();
    x.Field("ShipState").HeaderText("Ship State").Add();
  })
)
